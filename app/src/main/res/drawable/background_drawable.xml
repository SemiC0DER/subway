<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경 색상 지정 -->
    <solid android:color="#C0C0C0"/> <!-- 원하는 배경 색상을 지정합니다. 여기서는 밝은 회색을 사용합니다. -->

    <!-- 테두리 설정 (선택 사항) -->
    <stroke
        android:width="2dp"
        android:color="#000000" />  <!-- 테두리 두께 및 테두리 색상-->

    <!-- 모서리 반경 설정 (선택 사항) -->
    <corners android:radius="8dp" /> <!-- 모서리 반경을 조정하여 모서리를 둥글게 만듭니다. -->
</shape>