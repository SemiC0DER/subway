<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 기존 가로 막대 모양 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000"/> <!-- 원하는 색상 코드로 변경 -->
            <size
                android:width="100dp"
                android:height="1dp"/>
        </shape>
    </item>



    <!-- 세로 선 -->
    <item android:top="0dp" android:bottom="0dp" android:left="49dp" android:right="49dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- 세로 선의 색상 -->
            <size
                android:width="1dp"
                android:height="25dp"/> <!-- 세로 선의 길이와 높이 -->
        </shape>
    </item>

</layer-list>
