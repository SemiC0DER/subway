<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:background="@drawable/background_rect_white_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp" />


    <TextView
        android:id="@+id/textview2"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"

        android:background="@drawable/border_round_blue_white"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/start_station"
        android:layout_width="270dp"
        android:layout_height="36dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="25dp"

        android:singleLine="true"
        android:imeOptions="actionDone"

        android:background="@color/white"
        android:hint="출발역을 입력하세요."
        android:textColor="#000000"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textview3"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp"

        android:background="@drawable/border_round_blue_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/destination_station"
        android:layout_width="270dp"
        android:layout_height="36dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="80dp"

        android:singleLine="true"
        android:imeOptions="actionDone"

        android:background="@color/white"
        android:hint="도착역을 입력하세요."
        android:textColor="#000000"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/find_road"
        android:layout_width="48dp"
        android:layout_height="103dp"
        android:layout_marginStart="350dp"
        android:layout_marginTop="20dp"

        android:background="@drawable/border_round_blue_white"
        android:text="길찾기"
        android:textColor="#000000"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <Button
        android:id="@+id/subwayBtn"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="705dp"

        android:background="@drawable/border_round_blue_white"
        android:fontFamily="@font/nanumregular"
        android:text="길찾기"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/communityBtn"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="705dp"

        android:background="@drawable/border_round_blue_white"

        android:text="커뮤니티"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="182dp"
        android:layout_marginStart="16dp"

        android:gravity="center"
        android:text="최단시간"
        android:textSize="60px"
        android:textColor="#000000"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/start_st"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="240dp"

        android:background="@drawable/border_round_blue"
        android:gravity="center"
        android:text="출발역:"
        android:textColor="#000000"
        android:textSize="11sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dest_st"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginTop="540dp"
        android:layout_marginStart="16dp"

        android:background="@drawable/border_round_blue"
        android:gravity="center"
        android:text="도착역: "
        android:textColor="#000000"
        android:textSize="11sp"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />

    <TextView
        android:id="@+id/cost_trans_station"
        android:layout_width="74dp"
        android:layout_height="240dp"
        android:layout_marginTop="280dp"
        android:layout_marginStart="16dp"

        android:background="@drawable/border_round_blue"

        android:gravity="center"
        android:textColor="#000000"
        android:textSize="14sp"
        android:lineSpacingExtra="5dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />

    <TextView
        android:id="@+id/trans_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="287dp"
        android:layout_marginStart="37dp"

        android:gravity="center"
        android:text="환승역"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="#000000"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/back_2"
        android:layout_width="304dp"
        android:layout_height="240dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="280dp"

        android:background="@drawable/border_round_blue"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cost_all_station"
        android:layout_width="295dp"
        android:layout_height="240dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="280dp"

        android:gravity="center_vertical|left"
        android:textColor="#000000"
        android:textSize="14sp"
        android:lineSpacingExtra="5dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>