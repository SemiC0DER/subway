<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"

        android:background="@drawable/border_round_blue_white"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/start_station"
        android:layout_width="270dp"
        android:layout_height="36dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="25dp"

        android:singleLine="true"
        android:imeOptions="actionDone"

        android:background="@color/white"
        android:hint="출발역을 입력하세요."
        android:textColor="#000000"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textview2"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp"

        android:background="@drawable/border_round_blue_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/destination_station"
        android:layout_width="270dp"
        android:layout_height="36dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="80dp"

        android:singleLine="true"
        android:imeOptions="actionDone"

        android:background="@color/white"
        android:hint="도착역을 입력하세요."
        android:textColor="#000000"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/find_road"
        android:layout_width="48dp"
        android:layout_height="103dp"
        android:layout_marginStart="350dp"
        android:layout_marginTop="20dp"

        android:background="@drawable/border_round_blue_white"
        android:text="길찾기"
        android:textColor="#000000"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <Button
        android:id="@+id/subwayBtn"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="705dp"

        android:background="@drawable/border_round_blue_white"
        android:fontFamily="@font/nanumregular"
        android:text="길찾기"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/communityBtn"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="705dp"

        android:background="@drawable/border_round_blue_white"
        android:fontFamily="@font/nanumregular"
        android:text="커뮤니티"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="482dp"
        android:layout_marginTop="168dp"

        android:contentDescription="지하철 노선도"
        android:background="@drawable/border_rect_blue_white"

        app:layout_constraintTop_toTopOf="parent" >


        <ImageView
            android:id="@+id/subway_image"
            android:layout_width="match_parent"
            android:layout_height="476dp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="3dp"

            android:scaleType="fitXY"
            android:src="@drawable/subway_line_white"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


