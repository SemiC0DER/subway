<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/Subway_Image"
        android:layout_width="398dp"
        android:layout_height="442dp"
        app:srcCompat="@drawable/resource__"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="158dp" />

    <Button
        android:id="@+id/start_station"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:hint="출발역을 입력하세요"
        android:background="#CEECF5"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="25dp" />

    <Button
        android:id="@+id/destination_station"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:hint="도착역을 입력하세요"
        android:background="#CEECF5"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="80dp" />

    <Button
        android:id="@+id/find_road"
        android:layout_width="39dp"
        android:layout_height="100dp"
        android:text="길찾기"
        android:background="#CEECF5"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="355dp"
        tools:layout_editor_absoluteY="25dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:text="길찾기"
        android:background="#CEECF5"
        android:textStyle="bold"
        android:textSize="28sp"
        android:fontFamily="@font/nanumregular"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="650dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:text="커뮤니티"
        android:background="#CEECF5"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="@font/nanumregular"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="650dp" />
</androidx.constraintlayout.widget.ConstraintLayout>