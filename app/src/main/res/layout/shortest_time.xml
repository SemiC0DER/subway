<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:background="@drawable/border_round_blue_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/start_station"
        android:layout_width="270dp"
        android:layout_height="36dp"
        android:hint="출발역을 입력하세요."
        android:textColor="#000000"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="35dp"
        android:layout_marginTop="25dp"/>
    <!--        android:background="@drawable/border_round_blue_white"/>-->

    <TextView
        android:id="@+id/textview1"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:background="@drawable/border_round_blue_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp"
        />

    <EditText
        android:id="@+id/destination_station"
        android:layout_width="270dp"
        android:layout_height="36dp"
        android:hint="도착역을 입력하세요."
        android:textColor="#000000"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="35dp"
        android:layout_marginTop="80dp" />

    <Button
        android:id="@+id/find_road"
        android:layout_width="48dp"
        android:layout_height="103dp"
        android:background="@drawable/border_round_blue_white"
        android:text="길찾기"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="350dp"
        android:layout_marginTop="20dp" />


    <Button
        android:id="@+id/button4"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="705dp"
        android:background="@drawable/border_round_blue_white"
        android:fontFamily="@font/nanumregular"
        android:text="길찾기"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/communityBtn"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="커뮤니티"
        android:textColor="#000000"
        android:background="@drawable/border_round_blue_white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="@font/nanumregular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="220dp"
        android:layout_marginTop="705dp"/>

    <!--    <ImageView-->
    <!--        android:id="@+id/imageView4"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="478dp"-->
    <!--        app:srcCompat="@drawable/no_color_border"-->
    <!--        tools:layout_editor_absoluteX="47dp"-->
    <!--        tools:layout_editor_absoluteY="148dp" />-->

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textSize="60px"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="182dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/start_st"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/border_round_blue"
        android:gravity="center"
        android:text="출발역:"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="도착역: "
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="@drawable/border_round_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="560dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/cost_trans_staion"
        android:layout_width="74dp"
        android:layout_height="241dp"
        android:text="101\n\n\n304"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="@drawable/border_round_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="280dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/cost_all_station"
        android:layout_width="304dp"
        android:layout_height="241dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/border_round_blue"
        android:gravity=""
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="101&#10140;"/>
</androidx.constraintlayout.widget.ConstraintLayout>
