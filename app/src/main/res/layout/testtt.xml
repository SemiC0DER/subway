<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/topTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상단 텍스트뷰"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 하단에 위치할 텍스트뷰들을 가로로 그룹화 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 좌측 하단 텍스트뷰 -->
        <TextView
            android:id="@+id/leftBottomTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="좌측 하단 텍스트뷰"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rightBottomTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 우측 하단 텍스트뷰 -->
        <TextView
            android:id="@+id/rightBottomTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="우측 하단 텍스트뷰"
            app:layout_constraintStart_toEndOf="@id/leftBottomTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>